################
### REQUIRED ###
################

# OPENAI_API_KEY
# Get it from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=

# GPT_MODEL
# choose between gpt-3.5-turbo-0613 and gpt-4-0613
GPT_MODEL=gpt-3.5-turbo-0613

# ROLLING_SUMMARY_WINDOW: 
# Mess with this to leverage the Agent memory or early or later, try to keep it low (Default 1000)
ROLLING_SUMMARY_WINDOW=1000 

# CHUNKING_TOKENS
# This is used to chunk large outputs into smaller pieces, and represents the number of tokens in each chunk to be passed to OpenAI ChatCompletions
CHUNKING_TOKENS=4000


################
### OPTIONAL ###
################

# WRAP_LIBRARY_URL
# Use your own wrap library URL. Default: https://raw.githubusercontent.com/polywrap/agent-learning-demo/dev/wraps
WRAP_LIBRARY_URL=

# ETHEREUM_PRIVATE_KEY
# Configure an ethereum signer (wallet)
ETHEREUM_PRIVATE_KEY=
